<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <div class="row" style="padding-top:50px">
            <div class="col-6">
                <a href="~/HomePage/Index" class="text-decoration-none">
                    <h3 style="color: azure; font-weight: 700;">Welcome to ĐLL-National Level Paper Presentation</h3>
                </a>
            </div>
            <div>
                @if (Session["UserName"] != null)
                {
                    <div style="float:right">
                        <a class="btn" style="background-color:azure;color:darkred;font-weight:500" href="@Url.Action("Logout","User")">Log out</a>
                    </div>
                }

                else
                {
                    <div style="float:right">
                        <a class="btn" style="background-color:azure;color:darkred;font-weight:500" href="@Url.Action("SignUp", "User")">Sign up</a>
                        <a class="btn" style="background-color:azure;color:darkred;font-weight:500" href="@Url.Action("Login", "User")">Sign in</a>
                    </div>
                }


            </div>
            <div class="row">
                <ul class="nav nav-pills">
                    <li class="nav-item" style="padding-right:20px">
                        <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkred" href="@Url.Action("Stays","HomePage")">
                            <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">bed</i> Design
                        </a>
                    </li>

                    <li class="nav-item" style="padding-right:20px">
                        <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkred" href="@Url.Action("Flights","HomePage")">
                            <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">flight</i> Editor
                        </a>
                    </li>

                    <li class="nav-item" style="padding-right:20px">
                        <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkred" href="@Url.Action("Flights","HomePage")">
                            <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">flight</i> Developer
                        </a>
                    </li>

                    <li class="nav-item" style="padding-right:20px">
                        <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkred" href="@Url.Action("Flights","HomePage")">
                            <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">flight</i> WordP
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkred" href="@Url.Action("Packages","HomePage")">
                            <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">travel_explore</i> Packages
                        </a>
                    </li>
                </ul>
            </div>


        </div>
       
        <div class="row" style="padding-top:150px">
            <p style="font-size:45px;color:azure;font-weight:700">
                Find your job
            </p>
            <p style="font-size:20px;color:azure;font-weight:300">
                Find more jobs, design, programming, drawing and more...
            </p>
        </div>
    </div>
</body>
</html>


