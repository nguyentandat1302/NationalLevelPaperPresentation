@model NationalLevelPaperPresentation.Models.Participant
@{
    ViewBag.Title = "Participant";
    Layout = "~/Views/Shared/LayoutNavbar.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Item/Participant.css" rel="stylesheet">
    <style>
        /* Đặt kích thước chữ cho các phần tử trong phần form */
        form {
            font-size: 14px; /* Điều chỉnh kích thước chữ theo ý muốn */
        }

        label, input {
            font-size: 10px; /* Điều chỉnh kích thước chữ theo ý muốn */
        }

        .text-danger {
            font-size: 10px; /* Điều chỉnh kích thước chữ theo ý muốn */
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center" style="padding-top: 30px; height: 110vh">
            <div class="col-md-7">
                <form style="border: solid; border-width: 3px; border-radius: 10px; padding: 20px;" action="/User/Participant" method="post">
                    <div>
                        <div class="section-title text-center">
                            <h1>Get in Touch</h1>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce vitae risus nec dui venenatis dignissim. Aenean vitae metus in augue pretium ultrices.</p>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <h2>Sign Up Volunteers Activity</h2>
                        <label for="exampleFormControlInput1" class="form-label">FullName</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" aria-describedby="passwordHelpBlock" placeholder="name" style="min-width:500px" name="name">
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })

                        <label for="inputPassword5" class="form-label">Email</label>
                        <input type="text" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="Email" style="min-width:500px" name="Email">
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        <div id="passwordHelpBlock" class="form-text">
                            Please enter email.com
                        </div>
                        <label for="inputPassword5" class="form-label">Description</label>
                        <input type="text" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="Description" style="min-width:500px" name="PASSWORD">
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 8-30 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </div>

                        <label for="inputPassword5" class="form-label">PhoneNumber</label>
                        <input type="tel" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" placeholder="PhoneNumber" style="min-width:500px" name="ConfirmPassword">
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                        <div style="padding-top: 20px; text-align: center;">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-5">
                <div class="single_address">
                    <i class="fa fa-map-marker"></i>
                    <h4>Our Address</h4>
                    <p>3481 Melrose Place, Beverly Hills</p>
                </div>
                <div class="single_address">
                    <i class="fa fa-envelope"></i>
                    <h4>Send your message</h4>
                    <p>Info@example.com</p>
                </div>
                <div class="single_address">
                    <i class="fa fa-phone"></i>
                    <h4>Call us on</h4>
                    <p>(+1) 517 397 7100</p>
                </div>
                <div class="single_address">
                    <i class="fa fa-clock-o"></i>
                    <h4>Work Time</h4>
                    <p>Mon - Fri: 08.00 - 16.00. <br>Sat: 10.00 - 14.00</p>
                </div>
            </div>
        </div>
    </div>

    <script src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js'></script>
</body>
</html>
